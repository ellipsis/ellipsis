set nocompatible
filetype indent plugin on | syntax on

let &rtp.=','.expand('~/.vim/addons/vice')
call vice#Initialize({
    \ 'addons': [
        \ 'github:zeekay/vice-colorful',
        \ 'github:zeekay/vice-git',
        \ 'github:zeekay/vice-standard-issue',
    \ ]
\ })

" Don't remember session
set viminfo=
set nows
set ttyfast
set nolazyredraw
set laststatus=0

nnoremap ; :
vnoremap ; :

" Prevent cursor from moving when leavng insert mode
inoremap <Esc> <Esc>`^

map <leader>q :q<cr>
nnoremap J <c-d>
nnoremap K <c-u>
vnoremap J <c-d>
vnoremap K <c-u>
nnoremap Q ZQ
inoremap <c-u> <c-o>dd

func! s:JumpToFirstDiff()
    if &ft == 'diff'
        normal gg]]
        echo
    else
        normal gg
    endif
endf

au VimEnter * call s:JumpToFirstDiff()

color hybrid
hi Normal ctermbg=235

" vim:set filetype=vim:
